{
  "name": "travel-chatbot",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "echo 'Add ESLint configuration for linting'",
    "health": "curl -f http://localhost:3000/api/chat/health || exit 1"
  },
  "keywords": [
    "travel",
    "chatbot",
    "ai",
    "assistant",
    "node.js",
    "express"
  ],
  "author": "Travel Chatbot Team",
  "license": "MIT",
  "description": "AI-powered travel assistant chatbot built with Node.js and Express",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "collectCoverageFrom": [
      "src/**/*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "middleware/**/*.js",
      "!**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
